{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminRecipeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Créer une recette ! ✅</h1>


    {{ form_start(form_view) }}

    <div>
        {{ form_label(form_view.title) }}
        {{ form_widget(form_view.title) }}
        {{ form_errors(form_view.title) }}
    </div>

    <div>
        {{ form_label(form_view.image) }}
        {{ form_widget(form_view.image) }}
        {{ form_errors(form_view.image) }}
    </div>

    <div>
        {{ form_label(form_view.ingredients) }}
        {{ form_widget(form_view.ingredients) }}
        {{ form_errors(form_view.ingredients) }}
    </div>

    <div>
        {{ form_label(form_view.instructions) }}
        {{ form_widget(form_view.instructions) }}
        {{ form_errors(form_view.instructions) }}
    </div>

    <div>
        {{ form_label(form_view.category) }}
        {{ form_widget(form_view.category) }}
        {{ form_errors(form_view.category) }}
    </div>

    <div>
        {{ form_label(form_view.isPublished) }}
        {{ form_widget(form_view.isPublished) }}
        {{ form_errors(form_view.isPublished) }}
    </div>

    <div>
        {{ form_widget(form_view.submit) }}
    </div>

    {{ form_end(form_view) }}
</div>
{% endblock %}
