{% extends 'admin/base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

    <a href="{{ path('admin_create_category') }}" class="btn btn-primary">Créer une nouvelle catégorie</a>

    <h1>Liste des Catégories</h1>
    <div class="d-flex">
        {% for category in categories %}
            <div>
                <h2>{{ category.id }}</h2>
                <h2>{{ category.title }}</h2>
                <a href="{{ path('admin_update_category', {'id' : category.id}) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('admin_delete_category',  {'id' : category.id}) }}" class="btn btn-danger">Supprimer</a>

            </div>


        {% endfor %}

    </div>
{% endblock %}