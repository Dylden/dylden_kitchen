{% extends 'admin/base.html.twig' %}


{% block title %}Hello AdminRecipeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Créer une recette ! ✅</h1>


        {{ form_start(form_view) }}


        <div>
            {{ form_label(form_view.email) }}
            {{ form_widget(form_view.email) }}
            {{ form_errors(form_view.email) }}
        </div>

        <div>
            {{ form_label(form_view.roles) }}
            {{ form_widget(form_view.roles) }}
            {{ form_errors(form_view.roles) }}
        </div>

        <div>
            {{ form_label(form_view.password) }}
            {{ form_widget(form_view.password) }}
            {{ form_errors(form_view.password) }}
        </div>

        <div>
            {{ form_widget(form_view.submit) }}
        </div>

        {{ form_end(form_view) }}
    </div>
{% endblock %}
